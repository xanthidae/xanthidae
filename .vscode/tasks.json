{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cargo build - rust-plsql-developer-plugin"
		},
		{
			"type": "shell",
			"command": "cargo check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: run checks"
		},
		{
			"type": "shell",
			"command": "cargo fmt --all -- --check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: check format"
		},
		{
			"type": "shell",
			"command": "cargo test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: run tests"
		},
		{
			"type": "shell",
			"command": "cross build --target x86_64-pc-windows-gnu",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cross build for Win64- rust-plsql-developer-plugin"
		},
		{
			"type": "shell",
			"command": "cross test --target x86_64-pc-windows-gnu",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "Rust: cross test for Win64- rust-plsql-developer-plugin"
		},
	]
}